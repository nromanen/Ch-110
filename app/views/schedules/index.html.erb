<aside id="notice"><%= notice %></aside>
<aside style="color:red;"><%= alert %></aside>

<!--<h1>Visits:</h1>-->
<%# if @visits.empty? %>
<!--  <h4>You don't have visits right now:</h4>-->
<%# end %>
<%# unless @visits.empty? %>
<table class="table">
  <thead>
    <tr>
      <th>Doctor</th>
      <th>Day</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Visit type</th>
    </tr>
  </thead>

  <tbody>
    <% @schedules.each do |schedule| %>
      <tr>
        <% dt_format = "%H:%M" %>
        <td><%= "#{schedule.user.name} #{schedule.user.surname}" %></td>
        <td><%= schedule.day %></td>
        <td><%= schedule.start_time.strftime(dt_format) %></td>
        <td><%= schedule.end_time.strftime(dt_format) %></td>
        <td><%= schedule.start_date %></td>
        <td><%= schedule.end_date %></td>
        <td><%= "#{schedule.visit_type.name} (#{schedule.visit_type.length})" %></td>

        <td><%= link_to 'Show', schedule %></td>
        <td><%= link_to 'Edit', edit_schedule_path(schedule) %></td>
        <td><%= link_to 'Delete', schedule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%# end %>


