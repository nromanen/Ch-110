<%= form_with(model: schedule, local: true) do |form| %>
  <% if schedule.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(schedule.errors.count, "error") %> prohibited this visit from being saved:</h2>

      <ul>
        <% schedule.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <% if current_user.role == 'admin' %>
  <div class="field">
    <%= form.label :user_id %>
    <%= form.select :user_id, User.where(:role => 'doctor').order(:surname).map{ |user| ["#{user.surname} #{user.name}", user.id]}%>
  </div>
    <% else %>
    <div class="field">
      <%= form.label :user_id %>
      <%= form.select :user_id, User.where(id: current_user.id).map{ |user| ["#{user.surname} #{user.name}", user.id]} %>
    </div>
    <% end %>

  <div class="field">
    <%= form.label :day %>
    <%= form.select :day, Schedule.days.keys.to_a.map %>
  </div>

  <div class="field">
    <%= form.label :start_time %>
    <%= form.time_select :start_time, minute_step: 30 %>
  </div>

  <div class="field">
    <%= form.label :end_time %>
    <%= form.time_select :end_time, minute_step: 30 %>
  </div>

  <div class="field">
    <%= form.label :start_date %>
    <%= form.date_select :start_date %>
  </div>

  <div class="field">
    <%= form.label :end_date %>
    <%= form.date_select :end_date %>
  </div>

  <div class="field">
    <%= form.label :visit_type_id %>
    <%= form.select :visit_type_id, VisitType.all.order(:length).map{ |vt| ["#{vt.name} - #{vt.length}", vt.id]}%>
  </div>

  <div class="actions">
    <%= form.submit 'Create Schedule' %>
  </div>
<% end %>
