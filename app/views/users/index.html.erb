<h1>Users:</h1>
<% unless @users.empty? %>
  <table class="table">
    <thead>
    <tr>
      <th>Name</th>
      <th>Surname</th>
      <th>Email</th>
      <th>Phone number</th>
      <th>Active</th>
      <th>Registration date</th>
    </tr>
    </thead>

    <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.surname %></td>
        <td><%= user.email %></td>
        <td><%= user.phone_number %></td>
        <td><%= user.is_active %></td>
        <td><%= user.created_at %></td>

        <!--        <td><%#= link_to 'Show', user %></td>-->
        <!--        <td><%#= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
      </tr>
    <% end %>
    </tbody>
  </table>
<% end %>
